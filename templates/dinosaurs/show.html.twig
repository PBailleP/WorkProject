{% extends 'base.html.twig' %}

{% block title %}Dinosaurs{% endblock %}

{% block body %}
    <h1>Dinosaurs</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ dinosaur.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ dinosaur.Name }}</td>
            </tr>
            <tr>
                <th>Height</th>
                <td>{{ dinosaur.Height }}</td>
            </tr>
            <tr>
                <th>Weight</th>
                <td>{{ dinosaur.Weight }}</td>
            </tr>
            <tr>
                <th>IsLookingCool</th>
                <td>{{ dinosaur.isLookingCool ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>LastSeen</th>
                <td>{{ dinosaur.lastSeen ? dinosaur.lastSeen|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('home') }}">back to list</a>

    <a href="{{ path('app_dinosaurs_edit', {'id': dinosaur.id}) }}">edit</a>

    {{ include('dinosaurs/_delete_form.html.twig') }}
{% endblock %}
